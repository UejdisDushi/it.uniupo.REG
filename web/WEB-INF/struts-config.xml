<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!--oggetti creati dai form, quindi entitÃ  !-->
    <form-beans>
        <form-bean name="login" type="model.Login"></form-bean>
        <form-bean name="inserimentoFarmaciaAndTF" type="model.Farmacia"></form-bean>
        <form-bean name="attiva-collaboratore" type="model.Farmacia"></form-bean>
        <form-bean name="rimanenze" type="model.Rimanenze"></form-bean>
    </form-beans>

    <!--gestisco i controller, nel primo path non ho bisogno di specificare il tipo della pagina!-->
    <action-mappings>
        <action path="/login" type="controller.LoginController" name="login" scope="session">
            <forward name="dati-errati" path="/WEB-INF/WrongLogin.jsp"></forward>
            <forward name="home-adm" path="/WEB-INF/REG/home-reg.jsp" ></forward>
            <forward name="home-tf" path="/WEB-INF/tf/home-tf.jsp"></forward>
            <forward name="home-ob" path="/WEB-INF/ob/home-ob.jsp"></forward>
            <forward name="home-df" path="/WEB-INF/home-df.jsp"></forward>
        </action>

        <action path="/vendita-prodotti-per-ob" type="controller.VenditaTramiteOB" name="rimanenze">
            <forward name="vendita-tramite-ob-ok" path="/WEB-INF/ob/home-ob.jsp"></forward>
        </action>

        <action path="/paziente-presente" type="controller.forward.ForwardToHometf">
            <forward name="paziente-presente-ok" path="/WEB-INF/tf/home-tf.jsp"></forward>
        </action>

        <action path="/vendita" type="controller.VenditaController" name="rimanenze">
            <forward name="acquisto-senza-ricetta" path="/WEB-INF/tf/home-tf.jsp"></forward>
            <forward name="acquisto-con-ricetta" path="/WEB-INF/tf/elenco-pazienti.jsp"></forward>
        </action>

        <action path="/attiva-collaboratore" type="controller.AttivaPersonaleController" name="attiva-collaboratore">
            <forward name="attiva-collaboratore-ok" path="/WEB-INF/tf/attiva-collaboratore-ok.jsp"></forward>
        </action>

        <action path="/reintegra-magazzino" type="controller.ReintegraMagazzinoController" name="rimanenze">
            <forward name="reintegra-ok" path="/WEB-INF/tf/home-tf.jsp"></forward>
        </action>

        <action path="/lista-farmacie" type="controller.ElencoFarmacieController">
            <forward name="farmacie" path="/WEB-INF/farmacie.jsp"></forward>
        </action>

        <action path="/attiva-farmacia" type="controller.AttivaFarmaciaAndTFController" name="inserimentoFarmaciaAndTF">
            <forward name="inserimento-farmacia-corretto" path="/WEB-INF/REG/inserimento-farmacia-corretto.jsp"></forward>
            <forward name="inserimento-farmacia-errato" path="/WEB-INF/REG/inserimento-farmacia-errato.jsp"></forward>
        </action>


        <!--qui gestisco tutti i forward alle pagine dentro web-inf!-->
        <action path="/forwardToAttivaFarmacia" type="controller.forward.ForwardAttivaFarmacia">
            <forward name="attiva-farmacia" path="/WEB-INF/REG/attiva-farmacia.jsp" />
        </action>
        <action path="/forwardToAttivaCollaboratore" type="controller.forward.ForwardAttivaPersonale">
            <forward name="attiva-collaboratore" path="/WEB-INF/tf/attiva-collaboratore.jsp"></forward>
        </action>
        <action path="/forwardToReintegraMagazzino" type="controller.forward.ForwardReintegraMagazzino">
            <forward name="reintegra-magazzino" path="/WEB-INF/tf/reintegra-magazzino.jsp"></forward>
        </action>
        <action path="/forwardToVenditaTramiteOB" type="controller.forward.ForwardToVenditaTramiteOB">
            <forward name="vendita-tramite-ob" path="/WEB-INF/ob/vendita-tramite-ob.jsp"></forward>
        </action>
        <action path="/forwardToVendita" type="controller.forward.ForwardToVendita">
            <forward name="vendita" path="/WEB-INF/tf/vendita.jsp"></forward>
        </action>


        <action path="/prova" type="org.apache.struts.actions.ForwardAction" parameter="/attiva-farmacia.jsp"></action>
        <action path="/logout" type="controller.LogoutController">
            <forward name="logout" path="/login.jsp"></forward>
        </action>



    </action-mappings>

</struts-config>