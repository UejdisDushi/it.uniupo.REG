<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!--oggetti creati dai form, quindi entitÃ  !-->
    <form-beans>
        <form-bean name="Login" type="model.LoginForm"></form-bean>
    </form-beans>

    <!--gestisco i controller, nel primo path non ho bisogno di specificare il tipo della pagina!-->
    <action-mappings>
        <action path="/views/login/login" type="controller.LoginAction" name="Login" scope="session">
            <forward name="badLogin" path="/WrongLogin.jsp"></forward>
            <forward name="successLogin" path="/index.jsp"></forward>
        </action>
    </action-mappings>

</struts-config>